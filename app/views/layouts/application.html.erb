    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "actiontext", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="prose mx-auto">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div>
      <% if user_signed_in? %>
        <%= link_to "New blog post", new_blog_post_path, class: "bg-gray-100 px-4 py-2 rounded hover:bg-gray-200" %>
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "bg-gray-100 px-4 py-2 rounded hover:bg-gray-200" %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
